generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  name        String
  phoneNumber String    @unique
  email       String?   @unique
  password    String
  contacts    Contact[] @relation("personalContacts")
  createdAt   DateTime  @default(now())
  countryCode CountryCode?

}

model Contact {
  id          Int       @id @default(autoincrement())
  name        String
  phoneNumber String    
  isSpam      Boolean   @default(false) 
  userId     String
  user       User      @relation("personalContacts", fields: [userId], references: [id])
  email      String?  
  countryCode CountryCode?
}

model Spam {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  phoneNumber String    @unique
  reports     Int    @default(1)
}

enum CountryCode {
  INDIA_91
  PAKISTAN_92
  AFGHANISTAN_93
  BANGLADESH_94
  SRI_LANKA_95
  NEPAL_96
  BHUTAN_97
  MALDIVES_98
  MYANMAR_99
  THAILAND_100
}